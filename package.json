{
  "name": "hiera-eyaml",
  "displayName": "hiera-eyaml",
  "description": "Extension for heira-eyaml encryptions and decryptions.",
  "publisher": "EncoreTechnologies",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "pricing": "Free",
  "activationEvents": [
    "onLanguage:yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hiera-eyaml.decryptSelection",
        "title": "Decrypt Selection"
      },
      {
        "command": "hiera-eyaml.decryptfile",
        "title": "Decrypt File"
      },
      {
        "command": "hiera-eyaml.encryptSelection",
        "title": "Encrypt Selection"
      }
    ],
		"languages": [
			{
				"id": "yaml",
				"extensions": [
					".yaml"
				],
				"aliases": [
					"yaml"
				]
			}
		],
		"configuration": [
			{
				"type": "object",
				"title": "heira-eyaml",
				"properties": {
					"EncoreTechnologies.heira-eyaml.eyamlPath": {
						"type": "string",
						"description": "Full path to the eyaml executable",
            "scope": "resource"
					},
					"EncoreTechnologies.heira-eyaml.publicKeyPath": {
						"type": "string",
						"description": "Full path to the Public Key",
            "scope": "resource"
					},
					"EncoreTechnologies.heira-eyaml.privateKeyPath": {
						"type": "string",
						"description": "Full path to the Private Key",
            "scope": "resource"
					},
					"EncoreTechnologies.heira-eyaml.outputFormat": {
						"type": "string",
            "default": "Block",
            "description": "Formatting to use for encrypted value (String or Block).",
            "scope": "resource"
					}
				}
			}
		]
  },
  "bugs": {
    "url": "https://github.com/bishopbm1org/vscode-hiera-eyaml/issues",
    "email": "code@encore.tech"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bishopbm1org/vscode-hiera-eyaml.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
